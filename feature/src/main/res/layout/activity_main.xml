<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:hint="Enter 1st number"
        android:textAlignment="center"
        android:textSize="36sp"
        android:id="@+id/txt1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Answer"
        android:layout_marginTop="20dp"
        android:id="@+id/txt2"
        android:textAlignment="center"
        android:textSize="26dp"
        android:textColor="@android:color/black"/>
<GridLayout
    android:layout_height="3000dp"
    android:layout_width="match_parent"
    android:rowCount="4"
    android:columnCount="4"
    android:background="#ff8c00">
    <Button
        android:text="1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="0"
        android:layout_column="0"
        android:textSize="20pt"
        android:onClick="b1"
        android:background="#09fce0"/>
    <Button
        android:text="2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="0"
        android:layout_column="1"
        android:textSize="20pt"
        android:onClick="b2"
        android:background="#09fce0"/>

    <Button
        android:text="3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="0"
        android:layout_column="2"
        android:textSize="20pt"
        android:onClick="b3"
        android:background="#09fce0"/>
    <Button
        android:text="/"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="0"
        android:layout_column="3"
        android:textSize="20pt"
        android:onClick="divOfNum"
        android:background="#fcf809"/>


    <Button
        android:text="4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="1"
        android:layout_column="0"
        android:textSize="20pt"
        android:onClick="b4"
        android:background="#09fce0"/>
    <Button
        android:text="5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="1"
        android:layout_column="1"
        android:textSize="20pt"
        android:onClick="b5"
        android:background="#09fce0"/>

    <Button
        android:text="6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="1"
        android:layout_column="2"
        android:textSize="20pt"
        android:onClick="b6"
        android:background="#09fce0"/>
    <Button
        android:text="*"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="1"
        android:layout_column="3"
        android:textSize="20pt"
        android:onClick="multOfNum"
        android:background="#fcf809"/>

    <Button
        android:text="7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="2"
        android:layout_column="0"
        android:textSize="20pt"
        android:onClick="b7"
        android:background="#09fce0"/>
    <Button
        android:text="8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="2"
        android:layout_column="1"
        android:textSize="20pt"
        android:onClick="b8"
        android:background="#09fce0"/>

    <Button
        android:text="9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="2"
        android:layout_column="2"
        android:textSize="20pt"
        android:onClick="b9"
        android:background="#09fce0"/>
    <Button
        android:text="-"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="2"
        android:layout_column="3"
        android:textSize="20pt"
        android:onClick="subOfNum"
        android:background="#fcf809"/>

    <Button
        android:text="0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="3"
        android:layout_column="0"
        android:textSize="20pt"
        android:onClick="b0"
        android:background="#09fce0"/>
    <Button
        android:text="c"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="3"
        android:layout_column="1"
        android:textSize="20pt"
        android:onClick="reset"
        android:textAllCaps="false"
        android:background="#fc0d09"/>

    <Button
        android:text="="
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="3"
        android:layout_column="2"
        android:textSize="20pt"
        android:onClick="beq"
        android:background="#fcf809"/>
    <Button
        android:text="+"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_row="3"
        android:layout_column="3"
        android:textSize="20pt"
        android:onClick="sumOfNum"
        android:background="#fcf809"/>
</GridLayout>
</LinearLayout>

